<UserControl x:Class="EIMS_Login.SystemAdministrator_AddUser"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             mc:Ignorable="d" 
             d:DesignHeight="535" d:DesignWidth="1250">
    
    <Grid Margin="0,0,0,0">
        <Border BorderBrush="Gray" BorderThickness="1" Grid.Row="0">
            <Grid Height="326" HorizontalAlignment="Left" Margin="12,12,0,0" Name="grid_top" VerticalAlignment="Top" Width="1226" Background="#FFF2F2F2">
                <Grid.ColumnDefinitions >
                    <ColumnDefinition Width="50"></ColumnDefinition>
                    <ColumnDefinition Width="725"></ColumnDefinition>
                    <ColumnDefinition Width="50"></ColumnDefinition>
                    <ColumnDefinition Width="401"></ColumnDefinition>
                </Grid.ColumnDefinitions>
                <!--<GridSplitter Grid.Row="0" Grid.Column="0" Width="3" HorizontalAlignment="Stretch" VerticalAlignment="Stretch" ></GridSplitter>-->
                <Rectangle Grid.Row="0" Grid.Column="0" Fill="Gray" Width="3"></Rectangle>
                <!--<Separator Grid.Row="0" Grid.Column="0" Background="Gray" Width="3"></Separator>-->
                <TextBlock  Name="adduser" Text="添加新用户:"  FontSize="20" Grid.Row="0" Grid.Column="1" HorizontalAlignment="Left" VerticalAlignment="Top" Height="50" Width="100" Margin="10,20"></TextBlock>
                <TextBlock  Name="adduser_registerLabel"  FontSize="15" Grid.Row="0" Grid.Column="1" HorizontalAlignment="Left" VerticalAlignment="Bottom" Height="250" Width="135" Margin="10" Padding="5,5" LineHeight="35" TextWrapping="Wrap">
                    <LineBreak/>
                        <Run>注册账号：</Run>
                    <LineBreak/>
                        <Run>注册密码： </Run>
                    <LineBreak/>
                        <Run>重复输入： </Run>
                    <LineBreak/>
                        <Run>账号所属人： </Run>
                    <LineBreak/>
                        <Run>身份证号： </Run>
                </TextBlock>
                <TextBlock Name="adduser_registerText" Grid.Row="0" Grid.Column="1" HorizontalAlignment="left" VerticalAlignment="Bottom" Height="220" Width="200" Margin="100,10" Padding="5,12" LineHeight="35" TextWrapping="Wrap"> 
                    <TextBox HorizontalAlignment="Stretch" VerticalAlignment="Top" Height="15" Width="180"></TextBox>
                    <TextBox HorizontalAlignment="Stretch" VerticalAlignment="Top" Height="15" Width="180"></TextBox>
                    <TextBox HorizontalAlignment="Stretch" VerticalAlignment="Top" Height="15" Width="180"></TextBox>
                    <TextBox HorizontalAlignment="Stretch" VerticalAlignment="Top" Height="15" Width="180"></TextBox>
                    <TextBox HorizontalAlignment="Stretch" VerticalAlignment="Top" Height="15" Width="180"></TextBox>
                </TextBlock>
                <TextBlock Name="adduser_registerTip" Grid.Row="0" Grid.Column="1" HorizontalAlignment="left" VerticalAlignment="Bottom" Height="250" Width="100" Margin="300,10" Padding="5,5" LineHeight="35">
                     <LineBreak/>
                        <Run>6~15位账号</Run>
                    <LineBreak/>
                        <Run>6~10位密码 </Run>
                </TextBlock>
                <TextBlock Name="addgroup_registerLabel" FontSize="15" Grid.Row="0" Grid.Column="1" HorizontalAlignment="Right" VerticalAlignment="Bottom" Height="250" Width="150" Margin="150,10" Padding="5,5" LineHeight="35">
                    <LineBreak/>
                        <Run>所属用户组：</Run>
                    <LineBreak/>
                        <Run>账号所属人编号：</Run>
                    <LineBreak/>
                        <Run>账号所属人性别：</Run>
                    <LineBreak/>
                        <Run>所在部门编号：</Run>
                    <LineBreak/>
                        <Run></Run>
                </TextBlock>
                <TextBlock Name="addgroup_registerText" Grid.Row="0" Grid.Column="1" HorizontalAlignment="Right" VerticalAlignment="Bottom" Height="220" Width="150" Padding="5,12" Margin="25,10" TextWrapping="Wrap" LineHeight="35" >
                    <ComboBox  Text="普通用户" HorizontalAlignment="Stretch" VerticalAlignment="Top"  SelectedIndex="0" Height="20" Width="100">
                        <ComboBoxItem Content="普通用户" Height="20"></ComboBoxItem>
                        <ComboBoxItem Content="系统管理员" Height="20"></ComboBoxItem>
                        <ComboBoxItem Content="维修管理员" Height="20"></ComboBoxItem>
                        <ComboBoxItem Content="仓库管理员" Height="20"></ComboBoxItem>
                        <ComboBoxItem Content="财务部管理员" Height="20"></ComboBoxItem>
                    </ComboBox>
                    <TextBox HorizontalAlignment="Right" VerticalAlignment="Bottom" Height="15" Width="125"></TextBox>
                    <ComboBox  Text="男" HorizontalAlignment="Stretch" VerticalAlignment="Top"  SelectedIndex="0" Height="20" Width="100" >
                        <ComboBoxItem Content="男" Height="20"></ComboBoxItem>
                        <ComboBoxItem Content="女" Height="20"></ComboBoxItem>
                    </ComboBox>
                    <TextBox HorizontalAlignment="Right" VerticalAlignment="Bottom" Height="15" Width="125"></TextBox>
                    <Button x:Name="submit" Content="提交" FontSize="13"  HorizontalAlignment="Right" VerticalAlignment="Bottom" Height="25" Width="80" Margin="45,0,0,0"></Button>
                </TextBlock>
                <Rectangle Grid.Row="0" Grid.Column="2" Fill="Gray" Width="3"></Rectangle>
                <TextBlock Name="AddDepartment" Text="添加新部门：" FontSize="20" Grid.Row="0" Grid.Column="3" HorizontalAlignment="Left" VerticalAlignment="Top" Height="50" Width="100" Margin="10,20"></TextBlock>
                <TextBlock  Name="AddDepartment_registorLabel"  FontSize="15" Grid.Row="0" Grid.Column="3" HorizontalAlignment="Left" VerticalAlignment="Bottom" Height="250" Width="135" Margin="10" Padding="5,5" LineHeight="35" TextWrapping="Wrap">
                    <LineBreak/>
                        <Run>新部门编号：</Run>
                    <LineBreak/>
                        <Run>新部门名称： </Run>
                    <LineBreak/>
                        <Run>部门描述： </Run>
                    <LineBreak/>
                        <Run>上级部门编号： </Run>
                    
                </TextBlock>
                <TextBlock Name="AddDepartment_registorText" Grid.Row="0" Grid.Column="3" HorizontalAlignment="Left" VerticalAlignment="Bottom" Height="220" Width="240" Padding="5,12" Margin="120,10" TextWrapping="Wrap" LineHeight="35">
                    <TextBox HorizontalAlignment="Stretch" VerticalAlignment="Top" Height="15" Width="150"></TextBox>
                    <TextBox HorizontalAlignment="Stretch" VerticalAlignment="Top" Height="15" Width="150"></TextBox>
                    <TextBox HorizontalAlignment="Stretch" VerticalAlignment="Top" Height="15" Width="150"></TextBox>
                    
                </TextBlock>
            </Grid>
        </Border>
        <Border BorderBrush="Gray" BorderThickness="1" Grid.Row="1">
            <Grid Height="161" HorizontalAlignment="Left" Margin="12,12,0,0" Name="grid_bottom" VerticalAlignment="Top" Width="1226" Background="#FFF2F2F2">
                
            </Grid>  
        </Border>
        
        <Grid.Resources>
            <Style
                TargetType="Border">
                <Setter
                    Property="BorderBrush"
                    Value="LightGray"></Setter>
                <Setter
                    Property="BorderThickness"
                    Value="0"></Setter>
            </Style>
        </Grid.Resources>
        <Grid.RowDefinitions>
            <RowDefinition Height = "350"></RowDefinition>
            <RowDefinition Height = "185"></RowDefinition>
        </Grid.RowDefinitions>
    </Grid>
</UserControl>
